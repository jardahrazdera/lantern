# Example: Home network static IP configuration
# Place in: /etc/systemd/network/10-eth0.network
#
# This configuration sets up a static IP for a home network
# Typical home router setup with 192.168.1.x addressing

[Match]
Name=eth0

[Network]
Address=192.168.1.100/24
Gateway=192.168.1.1
DNS=192.168.1.1
DNS=8.8.8.8
DNS=1.1.1.1

[Link]
RequiredForOnline=yes

# Apply with:
# sudo systemctl reload systemd-networkd
# sudo networkctl reconfigure eth0